                    app:donut_finished_stroke_width="6dp"
                    app:donut_unfinished_stroke_width="6dp"
                    android:layout_alignParentRight="true" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

